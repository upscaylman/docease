{
  "variables_communes": {
    "codeDocument": {
      "label": "Code Document / Entreprise",
      "type": "text",
      "required": true,
      "placeholder": "Ex: ACME Corp"
    },
    "civiliteDestinataire": {
      "label": "Civilité Destinataire",
      "type": "select",
      "options": ["Monsieur", "Madame", "Monsieur et Madame"],
      "required": true
    },
    "nomDestinataire": {
      "label": "Nom Destinataire",
      "type": "text",
      "required": false,
      "placeholder": "Ex: Dupont"
    },
    "statutDestinataire": {
      "label": "Statut Destinataire",
      "type": "text",
      "required": false,
      "placeholder": "Ex: Président, Directeur..."
    },
    "batiment": {
      "label": "Bâtiment",
      "type": "text",
      "required": false
    },
    "adresse": {
      "label": "Adresse",
      "type": "text",
      "required": false
    },
    "cpVille": {
      "label": "Code postal + Ville",
      "type": "text",
      "required": false,
      "placeholder": "Ex: 75001 Paris"
    },
    "emailDestinataire": {
      "label": "Email(s) destinataire(s)",
      "type": "email",
      "required": true,
      "description": "Plusieurs emails séparés par virgule"
    },
    "signatureExp": {
      "label": "Signature Expéditeur",
      "type": "text",
      "required": false,
      "placeholder": "Ex: FO METAUX"
    }
  },
  "templates": {
    "designation": {
      "nom": "Lettre de Désignation",
      "fichier": "template_principal.docx",
      "description": "Désignation de délégué syndical",
      "variables_specifiques": {
        "numeroCourrier": {
          "label": "Numéro de Courrier",
          "type": "text",
          "required": true,
          "placeholder": "Ex: 2025-001"
        },
        "civiliteDelegue": {
          "label": "Civilité Délégué",
          "type": "select",
          "options": ["Monsieur", "Madame"],
          "required": true
        },
        "nomDelegue": {
          "label": "Nom Délégué",
          "type": "text",
          "required": true
        },
        "emailDelegue": {
          "label": "Email Délégué",
          "type": "email",
          "required": false
        },
        "civiliteRemplace": {
          "label": "Civilité Remplaçant",
          "type": "select",
          "options": ["Monsieur", "Madame"],
          "required": false
        },
        "nomRemplace": {
          "label": "Nom Remplaçant",
          "type": "text",
          "required": false
        }
      }
    },
    "negociation": {
      "nom": "Mandat de Négociation",
      "fichier": "template_principal.docx",
      "description": "Mandat de négociation collective",
      "variables_specifiques": {
        "objet": {
          "label": "Objet du Mandat",
          "type": "text",
          "required": true
        },
        "civiliteDelegue": {
          "label": "Civilité Mandataire",
          "type": "select",
          "options": ["Monsieur", "Madame"],
          "required": true
        },
        "nomDelegue": {
          "label": "Nom Mandataire",
          "type": "text",
          "required": true
        },
        "emailDelegue": {
          "label": "Email Mandataire",
          "type": "email",
          "required": false
        }
      }
    }
  }
}
