{
  "variables_communes": {
    "entreprise": {
      "label": "Entreprise",
      "type": "text",
      "required": true,
      "placeholder": "Ex: ACME Corp"
    },
    "civilite": {
      "label": "Civilité",
      "type": "select",
      "options": ["Monsieur", "Madame", "Monsieur et Madame"],
      "required": true
    },
    "nom_destinataire": {
      "label": "Nom du destinataire",
      "type": "text",
      "required": false,
      "description": "Nom complet"
    },
    "statut": {
      "label": "Statut",
      "type": "text",
      "required": false,
      "placeholder": "Ex: Président, Directeur..."
    },
    "batiment": {
      "label": "Bâtiment",
      "type": "text",
      "required": false
    },
    "adresse": {
      "label": "Adresse",
      "type": "text",
      "required": false
    },
    "cp": {
      "label": "Code postal + Ville",
      "type": "text",
      "required": false,
      "placeholder": "Ex: 75001 Paris"
    },
    "email_destinataire": {
      "label": "Email(s) destinataire(s)",
      "type": "email",
      "required": true,
      "description": "Plusieurs emails séparés par virgule"
    },
    "nom_exp": {
      "label": "Nom expéditeur",
      "type": "text",
      "required": false
    },
    "date": {
      "label": "Date (format court)",
      "type": "auto",
      "format": "dd/MM/yyyy",
      "description": "Généré automatiquement"
    },
    "date_complete": {
      "label": "Date (format long)",
      "type": "auto",
      "format": "cccc d MMMM yyyy",
      "locale": "fr",
      "description": "Généré automatiquement (ex: vendredi 31 octobre 2025)"
    },
    "heure": {
      "label": "Heure",
      "type": "auto",
      "format": "HH:mm",
      "description": "Généré automatiquement"
    },
    "genre": {
      "label": "Genre (la/le)",
      "type": "auto",
      "condition": "civilite === 'Madame' ? 'la' : 'le'",
      "description": "Généré automatiquement selon la civilité"
    }
  },
  "templates": {
    "securite": {
      "nom": "Sécurité et Désignation",
      "fichier": "template_principal.docx",
      "description": "Sécurité désignation",
      "variables_specifiques": {
        "texte_ia": {
          "label": "Texte (optionnel IA)",
          "type": "textarea",
          "required": false,
          "rows": 5,
          "description": "Saisissez le texte ou laissez l'IA le générer"
        },
        "number": {
          "label": "Numéro",
          "type": "text",
          "required": false,
          "placeholder": "Ex: 2025-001"
        },
        "civilite_nomme": {
          "label": "Civilité (nommé)",
          "type": "select",
          "options": ["Monsieur", "Madame"],
          "required": false,
          "description": "Civilité de la personne nommée"
        },
        "nom_nomme": {
          "label": "Nom (nommé)",
          "type": "text",
          "required": false,
          "description": "Nom de la personne nommée"
        },
        "email_nomme": {
          "label": "Email (nommé)",
          "type": "email",
          "required": false,
          "description": "Email de la personne nommée"
        },
        "civilite_replace": {
          "label": "Civilité (remplaçant)",
          "type": "select",
          "options": ["Monsieur", "Madame"],
          "required": false,
          "description": "Si différent de la civilité principale"
        },
        "nom_replace": {
          "label": "Nom (remplaçant)",
          "type": "text",
          "required": false,
          "description": "Si différent du nom principal"
        }
      }
    },
    "designation": {
      "nom": "Mandat Négociation",
      "fichier": "template_designation.docx",
      "description": "Mandat de négociation collective",
      "variables_specifiques": {
        "objet": {
          "label": "Objet du mandat",
          "type": "text",
          "required": true,
          "placeholder": "Ex: Négociation collective"
        },
        "texte_ia": {
          "label": "Texte (optionnel IA)",
          "type": "textarea",
          "required": false,
          "rows": 5
        }
      }
    }
  }
}
